<% title "Aktuelles" %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
  <% for aktuelle in @aktuelles %>
    <tr>
      <td><%= aktuelle.title %></td>
      <td><%= aktuelle.text %></td>
      <td><%= link_to "Show", aktuelle %></td>
      <td><%= link_to "Edit", edit_aktuelle_path(aktuelle) %></td>
      <td><%= link_to "Destroy", aktuelle, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Aktuelle", new_aktuelle_path %></p>
